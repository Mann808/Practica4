<Page x:Class="Practica1.Payments"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Practica1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Payments">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="PaymentsGrid" Grid.Row="0" CurrentCellChanged="PaymentsGrid_CurrentCellChanged"/>
        <Button x:Name="DelPayment" Grid.Row="1" Click="DelPayment_Click" Content="Удалить данные" Margin="5,5,5,5"/>
    </Grid>
</Page>
